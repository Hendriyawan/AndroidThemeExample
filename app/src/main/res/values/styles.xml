<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
	</style>
	
	<!--toolbar light style -->
	<style name="toolbar_light" parent="Widget.AppCompat.Toolbar">
		<item name="theme">@style/Toolbar.Light</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="android:background">@color/colorPrimary</item>
	</style>
	
	<!--toolbar dark style-->
	<style name="toolbar_dark" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/colorPrimary</item>
	</style>
	
	<!--Toolbar.Light-->
	<style name="Toolbar.Light" parent="ThemeOverlay.AppCompat.Light">
		<!--used to for the title of Toolbar-->
		<item name="android:textColorPrimary">@android:color/white</item>
		<!--used to for the title of the Toolbar when parent is Theme.AppCompat.Light-->
		<item name="android:textColorPrimaryInverse">@android:color/white</item>
		<!--used to color the text of the action menu icons-->
		<item name="android:textColorSecondary">@android:color/white</item>
		<!--used to color the overflow menu icon-->
		<item name="actionMenuTextColor">@android:color/white</item>
	</style>
</resources>